[user]
	name = Miha Filej
	email = miha@filej.net
[core]
	excludesfile = /Users/miha/.gitignore-global
	editor = vim -f
[alias]
	s = status -sb
	k = commit -v
	ka = commit --all -v
	km = commit --amend -v
	co = checkout
	l = log --graph --decorate --pretty=sentence
	b = branch
	f = fetch
	r = rebase
	ff = pull --ff-only
	ffo = merge --ff-only
	nff = merge --no-ff
	msg = commit --allow-empty -m
	p = cherry-pick
	h = help -w
	head = log -1 --pretty=sentence --decorate
	amend = commit --amend -C HEAD
	undo = reset --soft HEAD^
	sup = log --reverse --no-merges --stat HEAD@{1}..
	ctags = !.git/hooks/ctags
[pretty]
	sentence=format:%C(yellow)%h%Creset%C(red)%d%Creset %C(white)%s%Creset %C(green)%cr %C(dim)by %an%Creset
[clean]
	requireForce = true
[color]
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow 
	remote = white
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = white bold
[push]
	default = current
[credential]
	helper = osxkeychain
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[init]
	templatedir = ~/.git-template
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
