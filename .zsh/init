autoload -Uz add-zsh-hook # dependency

fpath=(/usr/local/share/zsh-completions $fpath)
fpath=(~/.zsh/functions $fpath)

autoload -U ~/.zsh/functions/*(:t)

autoload -U zgitinit; zgitinit # zsh-git

source ~/.zsh/export.zsh

# load helpers
for config_file (~/.zsh/config/*.zsh) source $config_file

setopt multios

# load theme
setopt prompt_subst
source ~/.zsh/themes/mfilej.sh

if [ -f ~/.zsh/vendor/zsh-history-substring-search/zsh-history-substring-search.zsh ]; then
  source ~/.zsh/vendor/zsh-history-substring-search/zsh-history-substring-search.zsh
fi

# vim:set ft=zsh:
