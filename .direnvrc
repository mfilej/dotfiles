source /usr/local/opt/chruby/share/chruby/chruby.sh
source /usr/local/share/gem_home/gem_home.sh

# RUBIES+=(~/.rbenv/versions/*)

# use ruby [version]
use_ruby() {
  local ver=$1
  if [[ -z $ver ]] && [[ -f .ruby-version ]]; then
    ver=$(cat .ruby-version)
  fi
  if [[ -z $ver ]]; then
    echo Unknown ruby version
    exit 1
  fi
  chruby $ver
}
