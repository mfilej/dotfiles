[user]
	name = Miha Filej
	email = miha@filej.net
	signingkey = 2082F4F0DF126C5E
[core]
	pager = delta
[alias]
	l = log --graph --decorate --pretty=sentence
	r = rebase
	f = fetch
	msg = commit --allow-empty -m
	head = log -1 --pretty=sentence --decorate
	dt = difftool -y -t Kaleidoscope
	mt = mergetool -y -t Kaleidoscope
	wip = commit --no-verify -m "Wip"
[pretty]
	sentence=format:%C(yellow)%h%Creset%C(red)%d%Creset %C(white)%s%Creset %C(green)%cr %C(dim)by %an%Creset
[clean]
	requireForce = true
[color]
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow 
	remote = white
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = white bold
[push]
	default = current
	autoSetupRemote = true
[credential]
	helper = osxkeychain
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[init]
	defaultBranch = main
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[rebase]
	autosquash = true
	autoStash = true
[difftool]
	prompt = false
	trustExitCode = true
[mergetool]
	prompt = false
[url "git@github.com:"]
	insteadOf = hub:
[diff "exif"]
	textconv = exiftool
[protocol]
	version = 2
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
[rerere]
	enabled = true
	autoUpdate = true
[diff]
	tool = Kaleidoscope
[merge]
	tool = Kaleidoscope
[commit]
	verbose = true
